
<table>
	<% @users.each do |user|%>
		<tr>
			<td>
				<%= link_to user.name, user_path(user)%>
			</td>
			<td>
				<%= link_to "Profile", user_path(user)%>
			</td>

			<td>
				<%= link_to "Edit", edit_user_path(user)%>
			</td>

			<td>
				<%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete all details of this user from this application? Think about it again before clicking-ok. You can not reverse this delete. Please proceed with caution. Okay,enough warnings given, now make your choice!"}%>
			</td>
		</tr>
	<%end%>
</table>